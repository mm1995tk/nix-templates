{
  "name": "Dev Container",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/nix": {
      "packages": ["direnv", "home-manager"],
      "extraNixConfig": [
        "experimental-features = nix-command flakes"
      ]
    }
  },
  "mounts": [
    {
      "type": "volume",
      "source": "default-devcontainer-nix-store",
      "target": "/nix"
    }
  ],
  "customizations": {
    "vscode": {
      "settings": {
      },
      "extensions": [
        "ms-vscode-remote.remote-containers",
        "jnoortheen.nix-ide",
        "mkhl.direnv",
        "prettier.prettier-vscode"
      ]
    }
  },
  "postCreateCommand": "nix run nixpkgs#direnv allow",
  "postAttachCommand": "nix run nixpkgs#direnv reload"
}